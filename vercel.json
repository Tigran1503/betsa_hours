{
    "version": 2,
    "builds": [
      { "src": "server.js", "use": "@vercel/node" }
    ],
    "routes": [
      { "src": "/options/(.*)", "dest": "/server.js" },
      { "src": "/create-item",     "dest": "/server.js" },
      { "src": "/(.*)",            "dest": "/public/index.html" }
    ]
  }
  